<Window x:Class="Task_Timer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Timer" Height="284" Width="598" MinWidth="500" MinHeight="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel LastChildFill="True">
            <Label DockPanel.Dock="Top">Running Processes:</Label>
            <ListView x:Name="ProcessBox" Margin="0" DockPanel.Dock="Top" SelectionMode="Extended" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Process Name" />
                        <GridViewColumn Header="Memory Usage" />
                    </GridView>
                </ListView.View>
            </ListView>
        </DockPanel>
        <Button Content="Button" Grid.Column="1" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
